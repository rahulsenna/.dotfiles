{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build C File",
        "type": "shell",
        "command": "gcc",
        "args": [
          "-fdiagnostics-color=always",
          "-g",
          "${file}",
          "-lX11",
          "-o",
          "${workspaceFolder}/bin/${fileBasenameNoExtension}"
        ],
        "problemMatcher": [
          "$gcc"
        ]
      },
      {
        "type": "cppbuild",
        "label": "C/C++: GCC Build",
        "command": "g++",
        "args": [
          "-std=c++20",
          "-fdiagnostics-color=always",
          "-g",
          "${file}",
          "-o",
          "${workspaceFolder}/bin/${fileBasenameNoExtension}"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": [
          "$gcc"
        ],
        "presentation": {
          "reveal": "silent"
        },
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "Task generated by Debugger.",
        "icon": {
          "color": "terminal.ansiBlack",
          "id": "array"
        }
      },
      {
        "type": "cppbuild",
        "label": "C/C++: Clang Build",
        "command": "clang",
        "args": [
          "-fdiagnostics-color=always",
          "-g",
          "${file}",
          "-o",
          "${workspaceFolder}/bin/${fileBasenameNoExtension}"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": [
          {
            "owner": "cpp",
            "fileLocation": "absolute",
            "pattern": {
              "regexp": "(..[^:]*):([0-9]+):?([0-9]+)?:?: (warning|error):(.*)$",
              "file": 1,
              "line": 2,
              "column": 3,
              "severity": 4,
              "message": 5
            }
          }
        ],
        "group": {
          "kind": "build",
          "isDefault": false
        },
        "detail": "Task generated by Debugger."
      }
    ]
}
